@model SchoolNetwork.Models.ViewModels.UserResultViewModel

@{
    ViewData["Title"] = "Results";
}

<h1>Results</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Result Date
            </th>
            <th>
                Assignment
            </th>
            <th>
                Course
            </th>
            <th>
                Score
            </th>
            <th>
                Best Possiblle Score
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Results.Count; i++)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => m.Results[i].ResultDate)
            </td>
            <td>
                @Html.DisplayFor(m => m.Results[i].Assignment.Title)
            </td>
            <td>
                @Html.DisplayFor(m => m.Results[i].Assignment.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(m => m.Results[i].Score)
            </td>
            <td>
                @Html.DisplayFor(m => m.Results[i].Assignment.Value)
            </td>
        </tr>
        }
    </tbody>
</table>
